<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>


<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.mainScreenController">
   <top>
      <ImageView fx:id="imageView" fitHeight="455.0" fitWidth="589.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@../MainScreenImage.png" />
         </image>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </ImageView>
   </top>
   <bottom>
      <Label text="El programa incluye diseño de interfaces, manipulación de bases de datos SQL y una implementación del algoritmo de Dijkstra. Todas las librerías utilizadas pertenecen a sus respectivos dueños. Finalizada su última versión el día 10 de agosto de 2022. " textAlignment="JUSTIFY" BorderPane.alignment="CENTER" />
   </bottom>
   <padding>
      <Insets top="50.0" />
   </padding>
   <center>
      <HBox alignment="CENTER" spacing="50.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="cityMapButton" mnemonicParsing="false" onAction="#setCityMap" prefWidth="250.0" text="Ver Mapa">
               <font>
                  <Font name="Verdana" size="30.0" />
               </font>
            </Button>
            <Button fx:id="lineScreenButton" mnemonicParsing="false" onAction="#setLineScreen" prefWidth="250.0" text="Menú Líneas">
               <font>
                  <Font name="Verdana" size="30.0" />
               </font>
            </Button>
            <Button fx:id="travelScreenButton" mnemonicParsing="false" onAction="#setTravelScreen" prefWidth="250.0" text="Realizar Viaje">
               <font>
                  <Font name="Verdana" size="30.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </center>
</BorderPane>
